<p id="notice"><%= notice %></p>

<h1>Batch Days</h1>

<table>
  <thead>
    <tr>
      <th>Batch</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @batch_days.each do |batch_day| %>
      <tr>
        <td><%= batch_day.batch %></td>
        <td><%= batch_day.title %></td>
        <td><%= link_to 'Show', batch_day %></td>
        <td><%= link_to 'Edit', edit_batch_day_path(batch_day) %></td>
        <td><%= link_to 'Destroy', batch_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Batch Day', new_batch_day_path %>
